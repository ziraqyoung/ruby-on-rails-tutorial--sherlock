<div class="d-flex align-item-center">
  <div>
    <%= link_to gravatar_for(current_user, size: 50), current_user %>
  </div>
  <div class="ml-4">
    <h2><%= current_user.name %></h2>
    <span class="d-block"><%= link_to 'view my profile', current_user %></span>
    <span class="d-block"><%= pluralize(current_user.microposts.count, 'micropost') %></span>
  </div>
</div>
