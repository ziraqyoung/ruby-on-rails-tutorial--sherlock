<% provide(:title, @title) %>
<div class="row">
   <aside class="col-md-4">
      <section class="user_info">
         <%= gravatar_for @user %>
         <h1><%= @user.name %></h1>
         <span class="d-block"><%= link_to 'view profile', @user %></span>
         <span><b>Microposts:</b> <%= @user.microposts.count %></span>
      </section>
      <section class="stats">
         <%= render 'shared/stats' %>
         <% if @users.any? %>
            <div class="user_avatars">
               <% @users.each do |user| %>
                  <%= link_to gravatar_for(user, size: 30), user, class: 'm-1' %>
               <% end %>
            </div>
         <% end %>
      </section>
   </aside>

   <div class="col-md-8">
      <h3><%= @title %></h3>
      <% if @users.any? %>
         <ul class="users follow">
            <%= render @users %>
         </ul>
         <%= will_paginate %>
      <% end %>
   </div>
</div>
